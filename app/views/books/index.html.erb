<div class="w-full">
  <h1 class="text-slate-900 text-4xl mb-8">Catalogue</h1>
  <%= link_to '+ New Book', new_book_path, {class: "text-center bg-sky-500 text-white hover:bg-white hover:text-sky-500 border-sky-500 border-2 rounded px-10 py-1"} %>
  <table class="table my-5 w-full">
    <thead class="table-header-group border-b-2">
      <tr class="table-row bg-slate-50">
        <th class="table-cell text-left">Title</th>
        <th class="table-cell text-left">Author</th>
        <th class="table-cell text-left">Published Year</th>
        <th class="table-cell text-left">ISBN</th>
        <th class="table-cell"></th>
        <th class="table-cell"></th>
      </tr>
    </thead>
    <tbody class="table-row-group">
      <% @books.each do |b| %>
        <tr class="table-row odd:bg-white even:bg-slate-50">
          <td class="text-sky-500 hover:text-sky-800 table-cell"><%= link_to b.title, book_path(b) %></td>
          <td class="table-cell"><%= b.author %></td>
          <td class="table-cell"><%= b.published %></td>
          <td class="table-cell"><%= b.isbn %></td>
          <td class="table-cell text-yellow-500 hover:text-yellow-700"><%= link_to 'Edit', edit_book_path(b) %></td>
          <td class="table-cell text-rose-500 hover:text-rose-700"><%= button_to 'Remove', book_path(b), method: :delete, form: {data: { turbo_confirm: 'Are you sure?' }} %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
