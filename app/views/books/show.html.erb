<div>
  <p class="my-1">
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p class="my-1">
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p class="my-1">
    <strong>Year Published:</strong>
    <%= @book.published %>
  </p>

  <p class="my-1">
    <strong>ISBN:</strong>
    <%= @book.isbn %>
  </p>

  <p class="my-2">
    <%= link_to 'Home', books_path, class: "text-center bg-sky-500 text-white hover:bg-white hover:text-sky-500 hover:cursor-pointer border-sky-500 border-2 rounded px-12 py-0.5" %>
  </p>

  <p class="my-2">
    <%= link_to 'Edit', edit_book_path, class: "text-center bg-yellow-400 text-white hover:bg-white hover:text-yellow-400 hover:cursor-pointer border-yellow-400 border-2 rounded px-14 py-0.5" %>
  </p>

  <p class="my-2">
    <%= button_to 'Remove', book_path, method: :delete, form: {data: { turbo_confirm: 'Are you sure?' }}, class: "text-center bg-rose-400 text-white hover:bg-white hover:text-rose-400 hover:cursor-pointer border-rose-400 border-2 rounded px-10 py-0.5" %>
  </p>
</div>
